  <script>
    // Jahr setzen
    document.getElementById('year').textContent = new Date().getFullYear();

    // Einfaches Formularverhalten (nur Demo - ersetzt durch echten Endpoint)
    function handleSubmit(e){
      e.preventDefault();
      const n = document.getElementById('name').value.trim();
      const email = document.getElementById('email').value.trim();
      const msg = document.getElementById('message').value.trim();
      const feed = document.getElementById('feed');
      // Hier würdest du fetch() zu deinem Backend machen. Wir simulieren eine erfolgreiche Sendung.
      feed.textContent = "Danke, " + (n || "dein") + " Nachricht wurde (simuliert) gesendet.";
      e.target.reset();
      return false;
    }

    // Optional: Schnell-Taste zum Scrollen
    document.querySelectorAll('a[href^="#"]').forEach(a=>{
      a.addEventListener('click', (ev)=>{
        ev.preventDefault();
        const id = a.getAttribute('href').slice(1);
        const el = document.getElementById(id);
        if(el) el.scrollIntoView({behavior:'smooth',block:'start'});
      });
    });
  </script>
